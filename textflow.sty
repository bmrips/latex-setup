% Create language- and punctuation-aware macros for abbreviations like e.g. etc. by:
% \newabbreviation{eg}{zB}.  This creates a macro \eg, that expands to e.g. or z.B. dependent on the
% language set.
\newcommand*{\newabbreviation}[2]{
    \edef\@abbr {\IfLanguageName{ngerman}{#2}{#1}}

    \edef\@exec {
        \csdef{#1}{\expandafter\@abbreviate\@abbr\@nil}
    }
    \@exec
}
\def\@abbreviate #1#2\@nil{%
    #1\ifstrempty{#2}%
        {\@ifnextchar.{}{.\ }}%
        {.\,\@abbreviate #2\@nil}%
}

\newabbreviation{eg}{zB}
\newabbreviation{ie}{dh}
