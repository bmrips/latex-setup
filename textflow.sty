\DeclareOption{noparindent} {\setlength{\parindent}{0em}} % No paragraph indentation
\DeclareOption{pargap}      {\setlength{\parskip}{1ex}} % Gap between paragraphs
\DeclareOption*             {\PackageError{textflow}{Unknown option \CurrentOption}}
\ProcessOptions*

\RequirePackage[shortcuts]{extdash} % Hyphenation of words containing dashes
\RequirePackage[babel=true,tracking=true]{microtype} % Micro-typographic refinements

% Shortcuts for common abbreviations
\RequirePackage{iflang}
\newcommand*{\eg}{%
    \IfLanguageName{ngerman}
        {z.\,B\@ifnextchar.{}{.\ }} % German
        {e.\,g\@ifnextchar.{}{.\ }} % English
}
\newcommand*{\ie}{%
    \IfLanguageName{ngerman}
        {d.\,h\@ifnextchar.{}{.\ }} % German
        {i.\,e\@ifnextchar.{}{.\ }} % English
}
