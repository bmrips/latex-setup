% Micro-typographic refinements
\LoadPackage[
    babel = true,
    tracking = true
]{microtype}

% Hyphenation of words containing dashes
\LoadPackage[
    shortcuts
]{extdash}

% Create language-aware macros for abbreviations with correct spacing like e.g. by:
% \newabbreviation{eg}{zB}.  This creates a macro \eg/, that expands to `e.\,g.\@` or `z.\,B.\@`
% depending on the active language.
\newcommand*{\newabbreviation}[2]{
    \bgroup
        \edef\@exec {
            \gdef\csname #1\endcsname/{%
                \noexpand\IfLanguageName{german}{\@abbreviate#2\@nil}{\@abbreviate#1\@nil}%
            }
        }
        \@exec
    \egroup
}
\def\@abbreviate #1#2\@nil{%
    #1.\ifstrempty{#2}{\@}{\,\@abbreviate #2\@nil}%
}

\newabbreviation{eg}{zB}
\newabbreviation{ie}{dh}
