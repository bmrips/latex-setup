% Define macros for blackboard symbols, operating on lists : \newmathbb{A,B,C} -> \A \B \C
\newcommand*{\@newmathbb}[1]{\csdef{#1}{\ensuremath{\mathbb{#1}}}}
\newcommand*{\newmathbb}{\forcsvlist{\@newmathbb}}
\newmathbb{N,Z,Q,R,K}
