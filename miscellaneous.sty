\RequirePackage{f1rstlady/prelude}

% Use shortcuts for specifying the labelling of enumerations and enable inline lists (does not work
% for beamer).
\@ifclassloaded{beamer}{}{
    \LoadPackage[
        shortlabels,
        inline
    ]{enumitem}
}

% Give the source of an image in tiny, grey text
\LoadPackage{xcolor,luacolor}
\newcommand*{\source}[1]{
    \textcolor{grey!40}{\tiny{Quelle: #1}}
}

% Tables with proper spacing, without vertical rules and double rules
\LoadPackage{booktabs}

% Math mode in tables by specifying the columns with uppercase letters
\LoadPackage{array}
\newcolumntype{L}{>{$}l<{$}}
\newcolumntype{C}{>{$}c<{$}}
\newcolumntype{R}{>{$}r<{$}}

% Punctuation-aware \dots
\AtEndPreamble{ % load after hyperref, since both redefine \textellipsis
    \LoadPackage{ellipsis}
}

% References depending on the placement of \ref relative \label
\LoadPackage[
    nospace,
    english,
    ngerman
]{varioref}

% Insert todo notes with \todo
\@ifclassloaded{beamer}{
    \LoadPackage{ifdraft}
    \ifoptionfinal{
        \newcommand*{\todo}{}
    }{
        \newcommand*{\todo}[1]{\alert{\textbf{TODO:}}\ #1}
    }
}{
    \LoadPackage[
        obeyFinal,
        textsize = scriptsize
    ]{todonotes}
}

% Context-sensitive quotes
\LoadPackage{csquotes}

% Proper ' and ` in verbatim environments
\LoadPackage{upquote}
